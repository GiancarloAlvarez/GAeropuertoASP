@model IEnumerable<GAeropuerto.Models.Piloto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Licencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorasVuelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRev)
