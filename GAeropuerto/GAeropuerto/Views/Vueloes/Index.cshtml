@model IEnumerable<GAeropuerto.Models.Vuelo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroVuelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaVuelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAvionNavigation)
